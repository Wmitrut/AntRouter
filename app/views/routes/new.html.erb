<div class="home_div">
<h1>New route</h1>
    <form class="form-inline" role="form" id="route_form">
      <div class="form-group">
        <select class="form-control" id="turn-select">
          <option value="morning">Morning</option>
          <option value="evening">Evening</option>
          <option value="night">Night</option>
        </select>
      </div>
      <div class="form-group">
        <select class="form-control" id="direction-select">
          <option value="going">Going</option>
          <option value="returning">Returning</option>
        </select>
      </div>
      <button type="button" id="route-generate" class="btn btn-success btn-large">Generate New Route</button>
    </form>
</div>

<!--modal loading-->

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Please Wait, processing route...</h4>
      </div>
      <div class="modal-body center-block">
        <div class="progress">
          <div class="progress-bar bar" role="progressbar" aria-valuenow="1" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
