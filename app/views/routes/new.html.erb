<div class="home_div">
<h1>New route</h1>
    <form class="form-inline" role="form" id="route_form">
      <div class="form-group">
        <select class="form-control" id="turn-select">
          <option value="morning">Morning</option>
          <option value="evening">Evening</option>
          <option value="night">Night</option>
        </select>
      </div>
      <div class="form-group">
        <select class="form-control" id="direction-select">
          <option value="going">Going</option>
          <option value="returning">Returning</option>
        </select>
      </div>
      <button type="submit" id="route-generate" class="btn btn-success btn-large">Generate New Route</button>
    </form>
</div>
