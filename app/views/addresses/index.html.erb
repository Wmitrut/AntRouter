<div class="container divform">
<h1>Listing addresses</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody  class="table-hover">
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.latitude %></td>
        <td><%= address.longitude %></td>
        <td><%= link_to ' Show', address, class:"fa fa-eye btn btn-success  buttons"  %></td>
        <td><%= link_to ' Edit', edit_address_path(address), class:"fa fa-pencil-square-o btn btn-warning  buttons"   %></td>
        <td><%= link_to ' Destroy', address, method: :delete, data: { confirm: 'Are you sure?' }, class:"fa fa-trash-o btn btn-danger  buttons" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to ' New Address', new_address_path, class:" fa fa-plus btn btn-success btn-lg buttons" %>
</div>
