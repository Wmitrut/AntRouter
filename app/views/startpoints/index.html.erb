<div class="container divform">
<h1>Listing startpoints</h1>

<table  class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-hover">
    <% @startpoints.each do |startpoint| %>
      <tr>
        <td><%= startpoint.address %></td>
        <td><%= link_to 'Show', startpoint, class:"fa fa-eye btn btn-success  buttons"  %></td>
        <td><%= link_to 'Edit', edit_startpoint_path(startpoint), class:"fa fa-pencil-square-o btn btn-warning  buttons"   %></td>
        <td><%= link_to 'Destroy', startpoint, method: :delete, data: { confirm: 'Are you sure?' },class:"fa fa-trash-o btn btn-danger  buttons" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Startpoint', new_startpoint_path, class:" fa fa-plus btn btn-success btn-lg buttons"  %>
</div>
